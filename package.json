{
  "name": "project-core",
  "version": "0.0.3",
  "description": "project core",
  "main": "index.js",
  "scripts": {
    "test-only": "npm run compile && ./node_modules/.bin/mocha target/test/*.js",
    "compile": "./node_modules/.bin/babel src -d target",
    "watch-compile": "./node_modules/.bin/babel src -d target --watch",
    "test": "npm run compile && ./node_modules/.bin/istanbul cover ./node_modules/.bin/_mocha -- target/test/*.js",
    "changelog": "./node_modules/.bin/conventional-changelog -p angular -i CHANGELOG.md -w -r 0",
    "publish": "npm run compile && npm run test"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/leizongmin/node-project-core.git"
  },
  "author": "Zongmin Lei <leizongmin@gmail.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/leizongmin/node-project-core/issues"
  },
  "homepage": "https://github.com/leizongmin/node-project-core#readme",
  "dependencies": {
    "escape-string-regexp": "^1.0.4",
    "lei-ns": "^0.2.0",
    "lei-utils": "^2.0.1"
  },
  "devDependencies": {
    "babel-cli": "^6.4.0",
    "babel-core": "^6.4.0",
    "babel-preset-es2015-node4": "^2.0.2",
    "babel-preset-stage-0": "^6.3.13",
    "conventional-changelog": "^0.5.3",
    "istanbul": "^0.4.2",
    "mocha": "^2.3.4"
  }
}
