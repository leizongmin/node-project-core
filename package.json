{
  "name": "project-core",
  "version": "1.0.2",
  "description": "project core",
  "main": "index.js",
  "scripts": {
    "test": "npm run lint && npm run compile && cp -rf src/test/config dist/test && mocha dist/test/*.js",
    "coverage": "npm run compile && istanbul cover _mocha -- dist/test/*.js",
    "clean": "rm -rf dist",
    "compile": "npm run clean && babel src -d dist --source-maps=true",
    "watch": "npm run clean && babel src -d dist --watch --source-maps=true",
    "changelog": "conventional-changelog -p angular -i CHANGELOG.md -w -r 0",
    "prepublish": "npm run changelog && npm run test",
    "lint": "eslint src --fix && echo 'eslint passed'"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/leizongmin/node-project-core.git"
  },
  "author": "Zongmin Lei <leizongmin@gmail.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/leizongmin/node-project-core/issues"
  },
  "homepage": "https://github.com/leizongmin/node-project-core#readme",
  "dependencies": {
    "debug": "2.2.0",
    "escape-string-regexp": "^1.0.5",
    "js-yaml": "^3.6.1",
    "lei-ns": "^0.3.1",
    "lei-utils": "^2.2.0",
    "rd": "0.0.2"
  },
  "devDependencies": {
    "async": "^2.0.1",
    "babel-cli": "^6.11.4",
    "babel-core": "^6.13.2",
    "babel-eslint": "^6.1.2",
    "babel-preset-es2015-node4": "^2.1.0",
    "babel-preset-stage-3": "^6.5.0",
    "conventional-changelog-cli": "^1.2.0",
    "eslint": "^3.3.1",
    "eslint-config-lei": "0.0.6",
    "istanbul": "^0.4.2",
    "mocha": "^3.0.2"
  }
}
